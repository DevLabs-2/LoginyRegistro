<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <form action='@Url.Action("VerifLogin", "Account")' method="post">
        <input type="text" id="username" name="username" placeholder="Nombre de usuario" required>
        <input type="password" id="contrasenia" name="contrasenia" placeholder="Contraseña" required>
        <input type="submit" value="Ingresar">
    </form>
    @if (ViewBag.retry == true)
    {
        <h2>Datos incorrectos, ingresa de nuevo</h2>
    }
    <form action='@Url.Action("Olvido")'>
        <input type="submit" value="Olvide mi contraseña">
    </form>
</body>
</html>